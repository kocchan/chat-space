.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name 
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__new-group
          = link_to new_group_path do
            %i.fa.fa-edit
        %li.top-items__icons__edit-user
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class:"group" do
        .group__group-name 
          = group.name
        .group__latest-message 
          = group.show_last_message
